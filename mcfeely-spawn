#!/usr/bin/perl

use McFeely::Internal;
use Spawner;
use strict;

require 'chdir.pl';
require 'log.pl';

$| = 1;

&chdir_top or bail("cannot chdir: $!");

&init;
&doit(\&launch_ttpc, \&pack_result);

sub soft { print STDOUT "@_\n"; exit 99 }

sub launch_ttpc {
	my $ino = shift;
    chomp $ino;
	my $pid;

	if (!defined ($pid = fork)) {
		return($ino, undef);
	} elsif ($pid == 0) {
        open STDIN, "queue/task/$ino"
            or soft "trouble opening queue/task/$ino: $!";
		open(STDOUT, '>&main::WP')
			or soft "trouble duping STDOUT: $!";
		close STDERR;
		#open(STDERR, '>&main::WP')
		#	or soft "trouble duping STDERR: $!";
		exec 'bin/mcfeely-ttpc', $ino or soft "Couldn't exec tcpclient: $!";
	} else {
		return($ino, $pid);
	}
}

sub pack_result {
    my %args = @_;

    return(pack('Lca*', $args{slot}, $args{status}, $args{msg}) . "\n");
}
